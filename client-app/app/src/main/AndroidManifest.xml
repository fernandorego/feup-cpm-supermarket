<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:localeConfig="@xml/locales_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.ACMESupermarket"
        android:usesCleartextTraffic="true"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="33">
        <activity android:name=".activities.terminal.ReceiveNFCPurchaseActivity" android:noHistory="true" android:exported="true">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/nfc.feup.apm.pubkeyfortag"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="userPortrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".activities.AccountActivity"
            android:exported="false"
            android:screenOrientation="userPortrait"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.client.PurchaseActivity"
            android:exported="false"
            android:screenOrientation="userPortrait"
            android:theme="@style/Theme.ACMESupermarketNoNavBar" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:screenOrientation="userPortrait"
            android:parentActivityName=".activities.LoginActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:screenOrientation="userPortrait"
            android:launchMode="singleTop"/>
        <activity
            android:name=".activities.client.ClientActivity"
            android:screenOrientation="userPortrait"
            android:exported="false" />
        <activity
            android:name=".activities.terminal.TerminalActivity"
            android:screenOrientation="userPortrait"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:screenOrientation="userPortrait"
            android:theme="@style/Theme.ACMESupermarket.Splash"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
    </application>

</manifest>